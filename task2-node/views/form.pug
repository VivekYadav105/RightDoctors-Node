doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title user Form
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css", integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65", crossorigin="anonymous")
    body.pt-3
        form(method="post",action=user?"/person/"+user._id:"/person",style="max-width:600px,min-width:300px,width:100vw").d-flex.m-auto.flex-column.bg-warning.rounded.p-2.px-3.col-12.col-md-8.mt-3
            h1.text-center User form
            .form-group
              label name
              input#exampleInputEmail1.form-control(type='text',name="name",value=user?user.name:"")
            .form-group
              label age
              input.form-control(type='text' value=user?user.age:"",name="age")
            .form-group
              label mobileNo
              input.form-control(type='text' value=user?user.mobileNo:"",name="mobileNo",minLength=10,maxLength=12)
            .form-group
              label Gender
              select.form-control(value=user?user.gender:"",name="gender")
                option(selected=(user&&user.value==="male")   value="male") male
                option(selected=(user&&user.value==="female") value="female") female 
                option(selected=(user&&user.value==="other")  value="other") other 
            .form-group.d-flex.justify-content-center.pt-3
                button.btn.btn-success(type='submit') Submit

