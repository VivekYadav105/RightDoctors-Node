doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Users APP
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css", integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65", crossorigin="anonymous")
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer")
    body 
        .container.py-3
            h1.text-center.text-dark.bg-warning.p-3 Users list here
            form.wrapper.row.w-100.d-flex.justify-content-center.my-2(method="get" action="/form")    
                button.btn.btn-success.inline-block(style="width:100px") add user
            if errMessage!==""
               .alert.alert-danger(role="alert")
                    p.lead.text-center=errMessage
            else
                table.table
                    thead
                        tr.bg-primary
                            th(scope='col') #
                            th(scope='col') Name
                            th(scope='col') MobileNo
                            th(scope='col') Age
                            th(scope="col") Gender
                            th(scope="col") 
                    tbody.alert.alert-warning
                        each user in users
                            tr
                                td
                                td=user.name 
                                td=user.mobileNo 
                                td=user.age 
                                td=user.gender 
                                td.d-flex 
                                    form(action="/person/"+user._id).me-1
                                        input(type="hidden",name="_method",value="put")
                                        button.btn.btn-outline-dark 
                                            i.fa-solid.fa-pen-square 
                                    form(action="/person/"+user._id).ms-1
                                        input(type="hidden",name="_method",value="delete")
                                        button.btn.btn-outline-danger
                                            i.fa-solid.fa-trash
